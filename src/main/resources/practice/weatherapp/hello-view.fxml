<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="practice.weatherapp.WeatherController"
      spacing="20.0"
      stylesheets="@style.css"
      styleClass="root-pane">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Header Section -->
    <HBox alignment="CENTER" spacing="10.0" styleClass="header-bar">
        <Label text="Weather App" styleClass="header-title"/>

        <Region HBox.hgrow="ALWAYS"/>

        <TextField fx:id="cityInput" prefWidth="220.0" promptText="Enter city name..." styleClass="city-input"/>
        <Button fx:id="searchButton" text="Get Weather" styleClass="primary-btn"/>
    </HBox>

    <!-- Main Content Area -->
    <HBox spacing="20.0" VBox.vgrow="ALWAYS">

        <!-- Left Panel - Current Weather -->
        <VBox spacing="15.0" HBox.hgrow="ALWAYS" styleClass="card">
            <Label text="Current Weather" styleClass="card-title"/>
            <Separator/>

            <Label fx:id="cityLabel" text="City: -" styleClass="info-label"/>
            <Label fx:id="timeLabel" text="Time: -" styleClass="info-label"/>
            <Label fx:id="currentTempLabel" text="Temperature: -" styleClass="temp-label"/>
            <Label fx:id="feelsLikeLabel" text="Feels like: -" styleClass="info-label"/>
            <Label fx:id="humidityLabel" text="Humidity: -" styleClass="info-label"/>
            <Label fx:id="cloudCoverageLabel" text="Cloud coverage: -" styleClass="info-label"/>
            <Label fx:id="precipitationLabel" text="Precipitation: -" styleClass="info-label"/>
            <Label fx:id="aqiLabel" text="Air Quality Index: -" styleClass="info-label"/>
        </VBox>

        <!-- Right Panel -->
        <VBox spacing="15.0" HBox.hgrow="ALWAYS">

            <!-- 3-Day Forecast Panel -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="card">
                <Label text="3-Day Forecast" styleClass="card-title"/>
                <Separator/>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                    <VBox fx:id="forecastContainer" spacing="8.0"/>
                </ScrollPane>
            </VBox>

            <!-- 7-Day History Panel -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS" styleClass="card">
                <Label text="7-Day History" styleClass="card-title"/>
                <Separator/>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                    <VBox fx:id="historyContainer" spacing="8.0"/>
                </ScrollPane>
            </VBox>
        </VBox>
    </HBox>

    <!-- Loading Indicator -->
    <ProgressIndicator fx:id="loadingIndicator" visible="false"/>
</VBox>
